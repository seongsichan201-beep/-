import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

/**
 * "메모장을 만들어봐요" 메시지를 중앙에 표시하는 간단한 메모장 창을 생성하는 클래스입니다.
 */
public class MyNotepad {

    public static void main(String[] args) {
        // Swing GUI는 Event Dispatch Thread(EDT)에서 생성하고 조작해야 합니다.
        // invokeLater를 사용하면 해당 작업을 EDT에서 안전하게 실행할 수 있습니다.
        SwingUtilities.invokeLater(() -> {
            createAndShowGUI();
        });
    }

    private static void createAndShowGUI() {
        // 1. 기본 창(JFrame) 생성
        JFrame frame = new JFrame("메모장");

        // 2. 닫기 버튼을 누르면 프로그램이 종료되도록 설정
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

        // 3. 창 크기 설정
        frame.setSize(500, 300);

        // 4. 창을 화면 중앙에 위치시키기
        frame.setLocationRelativeTo(null);

        // 5. 메뉴바 및 메뉴 아이템 생성
        JMenuBar menuBar = new JMenuBar();
        JMenu fileMenu = new JMenu("파일");

        JMenuItem newItem = new JMenuItem("새로만들기");
        JMenuItem openItem = new JMenuItem("열기");
        JMenuItem saveItem = new JMenuItem("저장");
        JMenuItem saveAsItem = new JMenuItem("다른 이름으로 저장");
        JMenuItem exitItem = new JMenuItem("종료");

        // '종료' 메뉴 아이템에 대한 이벤트 처리
        exitItem.addActionListener(e -> System.exit(0));

        // 메뉴에 아이템들 추가
        fileMenu.add(newItem);
        fileMenu.add(openItem);
        fileMenu.add(saveItem);
        fileMenu.add(saveAsItem);
        fileMenu.addSeparator(); // 구분선 추가
        fileMenu.add(exitItem);

        // 메뉴바에 '파일' 메뉴 추가
        menuBar.add(fileMenu);

        // 프레임(창)에 메뉴바 설정
        frame.setJMenuBar(menuBar);

        // 6. 중앙에 표시할 메시지 라벨 생성
        JLabel messageLabel = new JLabel("메모장을 만들어봐요", SwingConstants.CENTER);
        // 라벨의 폰트 설정 (선택 사항)
        messageLabel.setFont(new Font("SansSerif", Font.BOLD, 20));

        // 7. 라벨을 창에 추가
        // JFrame의 기본 레이아웃 관리자는 BorderLayout이며, 기본적으로 CENTER에 추가됩니다.
        frame.add(messageLabel);

        // 8. 창을 화면에 표시
        // 모든 컴포넌트가 추가된 후에 호출하는 것이 좋습니다.
        frame.setVisible(true);
    }
}
